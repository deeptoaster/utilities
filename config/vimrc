set autoindent
set clipboard=unnamedplus
set colorcolumn=80
set cursorline
set directory=/tmp
set expandtab
set foldmethod=indent
set hlsearch
set incsearch
set mouse=a
set number
set shiftwidth=2
set smartindent
set tabstop=2
set wildmenu
colorscheme monokai
highlight Normal ctermbg=NONE
let g:NERDTreeWinPos = 'right'
let g:airline_powerline_fonts = 1
let g:ale_completion_enabled = 1
let g:ale_fixers = {'python': ['black'], '*': ['prettier']}
let g:ale_fix_on_save = 1
let g:ale_set_balloons = 1
let g:ctrlp_custom_ignore = '\v[\/](\.git|dist|node_modules)$'
let g:NERDTreeExactMatchHighlightFullName = 1
let g:NERDTreeFileExtensionHighlightFullName = 1
let g:NERDTreeGitStatusConcealBrackets = 1
let g:NERDTreePatternMatchHighlightFullName = 1
packadd! CtrlP
packadd! ale
autocmd User ALECompletePost setglobal nofoldenable |
    \ ALEHover |
    \ call timer_start(100, function('execute', ['setglobal foldenable']))
map <C-LeftMouse> <LeftMouse><Plug>(ale_go_to_definition)
map <C-]> <Plug>(ale_go_to_definition)
noremap <C-t> :NERDTreeToggle<CR>
nmap [q <Plug>(ale_previous_wrap)
nmap ]q <Plug>(ale_previous_wrap)
